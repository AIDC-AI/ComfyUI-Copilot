# ComfyUI-Copilot Local Configuration Template
# Copy this file to .env to use these settings

# ============================================
# SECURITY SETTINGS
# ============================================

# Disable all external connections (except Anthropic if configured)
DISABLE_EXTERNAL_CONNECTIONS=true

# Disable telemetry and tracking
DISABLE_TELEMETRY=true

# ============================================
# LOCAL LLM CONFIGURATION (DGX Spark)
# ============================================

# Your local LLM endpoint (DGX Spark)
LOCAL_LLM_BASE_URL=http://sparkle:8000/v1

# Default LLM model name (if your endpoint supports multiple models)
LOCAL_LLM_MODEL=your-model-name

# LLM API timeout in seconds
LLM_TIMEOUT=120

# ============================================
# ANTHROPIC CONFIGURATION (OPTIONAL)
# For workflow operations only
# ============================================

# Anthropic API endpoint
ANTHROPIC_BASE_URL=https://api.anthropic.com/v1

# Your Anthropic API key (leave empty to disable)
ANTHROPIC_API_KEY=

# Anthropic model for workflow operations
WORKFLOW_MODEL_NAME=claude-3-5-sonnet-20241022

# ============================================
# MODEL SOURCES
# ============================================

# Comma-separated list of allowed model sources
# Options: huggingface, civitai, local
ALLOWED_MODEL_SOURCES=huggingface,civitai,local

# HuggingFace Hub configuration
HUGGINGFACE_TOKEN=

# ============================================
# SESSION MANAGEMENT
# ============================================

# Session expiration time in hours
SESSION_MAX_AGE_HOURS=24

# Database path for local session storage
SESSION_DB_PATH=./data/sessions.db

# ============================================
# LEGACY SETTINGS (DO NOT USE)
# ============================================

# These are kept for compatibility but should remain empty
# for security reasons when DISABLE_EXTERNAL_CONNECTIONS=true
BACKEND_BASE_URL=
